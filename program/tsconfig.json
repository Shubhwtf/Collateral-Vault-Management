{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./",
    "types": ["mocha", "chai", "node"],
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["tests/**/*", "target/types/**/*"],
  "exclude": ["node_modules"]
}

